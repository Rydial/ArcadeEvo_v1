#version 460

///////////////////////////////////// UBOs /////////////////////////////////////

layout(std140, binding = 0) uniform PushConstant
{
  vec2 positionScale;
};

//////////////////////////////////// Inputs ////////////////////////////////////

layout(location = 0) in vec3 vPosition;
layout(location = 1) in vec2 vTexCoord;

/////////////////////////////////// Outputs ////////////////////////////////////

out vec2 texCoord;

////////////////////////////////////////////////////////////////////////////////

void main()
{
  gl_Position = vec4(vPosition * vec3(positionScale, 1.0), 1.0);
  texCoord = vTexCoord;
}